@model SistemaConta.Presentation.Models.Account.LoginViewModel
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-5">
            <div class="card mt-2">
                <div class="card-header">
                    <div class="text-center">
                        <h4 class="mt-2">Autenticação de Usuário</h4>
                        <p>Entre com os seus dados para acessar o sistema.</p>
                    </div>
                </div>
                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        <div class="form-group mb-2">
                            <label for="Email">E-mail:</label>
                            @Html.TextBoxFor(model => model.Email,
                        new
                        {
                        @class="form-control",
                        @placeholder="Digite seu e-mail"
                        })
                            <span class="text-danger">
                                @Html.ValidationMessageFor(model => model.Email)
                            </span>
                        </div>

                        <div class="form-group mb-2">
                            <label for="Senha">Senha:</label>
                            @Html.PasswordFor(model => model.Senha,
                        new
                        {
                        @class="form-control",
                        @placeholder="Digite sua senha"
                        })
                            <span class="text-danger">
                                @Html.ValidationMessageFor(model => model.Senha)
                            </span>
                        </div>
                        <div class="text-end mb-2">
                            <a href="/Account/PasswordRecover">
                                Esqueci minha senha?
                            </a>
                        </div>

                        <div class="d-grid mb-2">
                            <button type="submit" class="btn btn-primary">Entrar</button>
                        </div>

                        <div class="d-grid mb-2">
                            <a href="/Account/Register" class="btn btn-light">
                                Não possui conta? <strong>Cadastre-se aqui!</strong>
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>